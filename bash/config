# -------------------------------------------------------------------
# BASH HISTORY CONFIGURATION
# -------------------------------------------------------------------
HISTCONTROL=ignoredups # ignore the line if it mathces previous line
HISTFILESIZE=2000      # size of the history file cf. also shopt -s histappend
HISTSIZE=1000          # size of the run-time history list
HISTIGNORE=ls:ll:la:l:cd:pwd:exit:mc:su:df:clear

export HISTCONTROL HISTFILESIZE HISTSIZE HISTIGNORE


# -------------------------------------------------------------------
# COLOR CONFIGURATION
# -------------------------------------------------------------------
CLICOLOR=1
LSCOLORS=gxFxCxDxBxegedabagacad

export CLICOLOR LSCOLORS

# -------------------------------------------------------------------
# COLOR MAN PAGES:
# -------------------------------------------------------------------
export LESS_TERMCAP_mb=$'\E[01;31m'      # begin blinking
export LESS_TERMCAP_md=$'\E[01;31m'      # begin bold
export LESS_TERMCAP_me=$'\E[0m'          # end mode
export LESS_TERMCAP_se=$'\E[0m'          # end standout-mode
export LESS_TERMCAP_so=$'\E[01;44;33m'   # begin standout-mode - info box
export LESS_TERMCAP_ue=$'\E[0m'          # end underline
export LESS_TERMCAP_us=$'\E[01;32m'      # begin underline]]]]]]]'


# -------------------------------------------------------------------
# PYTHON SETTINGS:
# -------------------------------------------------------------------
export PYTHONPATH="${HOME}/bin:${PYTHONPATH}"

# -------------------------------------------------------------------
# MySQL SETTINGS:
# -------------------------------------------------------------------
if [ -d /usr/local/mysql/bin ]; then
    PATH="/usr/local/mysql/bin:${PATH}"
fi


# -------------------------------------------------------------------
# RVM Configuration:
# -------------------------------------------------------------------
source ~/.rvm/scripts/rvm
